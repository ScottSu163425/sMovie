<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundContent"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="@dimen/padding_xs"
    android:paddingLeft="@dimen/padding_s"
    android:paddingRight="@dimen/padding_xs"
    android:paddingTop="@dimen/padding_xs"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/height_avatar_list_s"
            android:layout_height="@dimen/height_avatar_list_s"
            android:scaleType="centerCrop"
            tools:src="@drawable/bg_header_navigation"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_s"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_body"
            tools:text="发多少看见发多少"/>

        <FrameLayout
            android:id="@+id/fl_more"
            android:layout_width="@dimen/height_avatar_list_s"
            android:layout_height="@dimen/height_avatar_list_s"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_more_vert_grey_600_36dp"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>