<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_xs"
    android:layout_marginLeft="@dimen/padding_s"
    android:layout_marginRight="@dimen/padding_s"
    android:layout_marginTop="@dimen/padding_s"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@drawable/selector_card_elevation"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            app:layout_aspectRatio="64%"
            app:layout_widthPercent="29%"
            tools:background="#eaeaea" />

        <com.haozhang.lib.SlantedTextView
            android:id="@+id/slanted_view_ranking"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="gone"
            app:slantedBackgroundColor="@color/colorAccent"
            app:slantedLength="45dp"
            app:slantedMode="right"
            app:slantedTextColor="@color/white"
            app:slantedTextSize="@dimen/text_size_body"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_cover"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_s"
            android:paddingRight="@dimen/padding_s"
            android:paddingTop="@dimen/padding_m"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_headline"
            tools:text="官方代表vcfds反倒是反倒是代表vcfds反倒是反倒是" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:paddingLeft="@dimen/padding_s"
            android:paddingTop="@dimen/padding_xs"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_subhead"
            tools:text="1997" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_divider_line"
            android:layout_above="@+id/rating_bar_rating"
            android:layout_toLeftOf="@+id/iv_cover"
            android:background="@color/dividerLine" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rating_bar_rating"
            style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_cover"
            android:layout_marginBottom="@dimen/padding_s"
            android:layout_marginLeft="@dimen/padding_xs"
            android:layout_marginTop="@dimen/padding_s"
            android:max="10"
            android:stepSize="0.5"
            tools:progress="8" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rating_bar_rating"
            android:layout_toRightOf="@+id/rating_bar_rating"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/padding_xxs"
            android:textColor="@color/md_red_400"
            android:textSize="@dimen/text_size_headline"
            android:textStyle="bold"
            tools:text="9.6" />
    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>