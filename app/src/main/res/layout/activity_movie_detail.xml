<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleGravity="left"
            app:expandedTitleGravity="left|bottom"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/bg_header"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_collapseMode="parallax">

                <android.support.v4.widget.Space
                    android:id="@+id/anchor_cover"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/padding_s"
                    android:layout_marginLeft="@dimen/padding_s"
                    android:layout_marginRight="@dimen/padding_s"
                    android:layout_marginTop="?attr/actionBarSize"
                    app:layout_aspectRatio="60%"
                    app:layout_heightPercent="100%"
                    tools:src="@drawable/bg_header_navigation"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/anchor_cover"
                    android:layout_toRightOf="@+id/anchor_cover"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/anchor_aka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subhead_aka"/>

                        <TextView
                            android:id="@+id/tv_aka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="@dimen/padding_xs"
                            android:paddingRight="@dimen/padding_xs"
                            tools:text="尖峰时刻/热火时间/怒火救援"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/padding_xs">

                        <TextView
                            android:id="@+id/anchor_director"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subhead_director"/>

                        <TextView
                            android:id="@+id/tv_director"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="@dimen/padding_xs"
                            android:paddingRight="@dimen/padding_xs"
                            tools:text="成龙"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/padding_xs">

                        <TextView
                            android:id="@+id/anchor_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subhead_year"/>

                        <TextView
                            android:id="@+id/tv_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="@dimen/padding_xs"
                            android:paddingRight="@dimen/padding_xs"
                            tools:text="2004"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/padding_xs">

                        <TextView
                            android:id="@+id/anchor_region"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subhead_region"/>

                        <TextView
                            android:id="@+id/tv_region"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="@dimen/padding_xs"
                            android:paddingRight="@dimen/padding_xs"
                            tools:text="中国/美国"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/padding_xs">

                        <TextView
                            android:id="@+id/anchor_genres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subhead_genres"/>

                        <TextView
                            android:id="@+id/tv_genres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="@dimen/padding_xs"
                            android:paddingRight="@dimen/padding_xs"
                            tools:text="喜剧/动作"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/padding_xs">

                        <TextView
                            android:id="@+id/anchor_casts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subhead_casts"/>

                        <TextView
                            android:id="@+id/tv_casts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingLeft="@dimen/padding_xs"
                            android:paddingRight="@dimen/padding_xs"
                            tools:text="成龙/李连杰/汤姆克鲁斯/Laday Gaga"/>
                    </LinearLayout>

                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/padding_s"
                    android:layout_marginLeft="@dimen/padding_s"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:scaleType="centerCrop"
                    android:transitionName="cover"
                    tools:src="@drawable/bg_header_navigation"/>
            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_s"
                android:layout_marginRight="@dimen/padding_s"
                android:layout_marginTop="@dimen/padding_l"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:stateListAnimator="@drawable/selector_card_elevation"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_s"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="剧情简介"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_size_subhead"/>

                        <ImageView
                            android:id="@+id/iv_arrow_summary"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_keyboard_arrow_up_grey_400_24dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:paddingTop="@dimen/padding_xs"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_body"
                        tools:text="范德萨解放路当升科技发的杀戮空间法律框架法律框架法律框架法律框架费德勒科技范德萨解放路当升科技发的杀戮空间法律框架法律框架法律框架法律框架费德勒科技"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <FrameLayout
                android:id="@+id/card_casts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_s"
                android:layout_marginRight="@dimen/padding_s"
                android:layout_marginTop="@dimen/padding_s"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_s"
                        android:layout_marginTop="@dimen/padding_s"
                        android:text="演员"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_subhead"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_casts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_xs"/>
                </LinearLayout>

            </FrameLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_s"
        android:src="@drawable/ic_favorite_white_24dp"
        app:elevation="@dimen/padding_xs"
        app:fabSize="normal"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="bottom|right"
        app:pressedTranslationZ="@dimen/padding_s"/>
</android.support.design.widget.CoordinatorLayout>