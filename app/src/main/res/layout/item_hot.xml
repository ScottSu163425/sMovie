<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_s"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@drawable/selector_card_elevation"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:transitionName="@string/transition_name_cover"
            app:layout_aspectRatio="75%"
            app:layout_widthPercent="35%"
            tools:background="#eaeaea"/>

        <com.haozhang.lib.SlantedTextView
            android:id="@+id/slanted_view_ranking"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:gravity="center"
            app:slantedBackgroundColor="@color/colorAccent"
            app:slantedLength="30dp"
            app:slantedMode="left"
            app:slantedText="@string/hot"
            app:slantedTextColor="@color/white"
            app:slantedTextSize="@dimen/text_size_caption"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_cover"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_s"
            android:paddingRight="@dimen/padding_s"
            android:paddingTop="@dimen/padding_s"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_headline"
            tools:text="官方代表vcfds反倒是反倒是代表vcfds反倒是反倒是"/>

        <TextView
            android:id="@+id/tv_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_toRightOf="@+id/iv_cover"
            android:paddingLeft="@dimen/padding_s"
            android:paddingTop="@dimen/padding_xs"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_body"
            tools:text="剧情/动作/悬疑"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_genres"
            android:layout_toRightOf="@+id/iv_cover"
            android:paddingLeft="@dimen/padding_s"
            android:paddingTop="@dimen/padding_xxs"
            android:text="120分钟"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_body"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_divider_line"
            android:layout_above="@+id/rating_bar_rating"
            android:layout_toRightOf="@+id/iv_cover"
            android:background="@color/dividerLine"/>

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rating_bar_rating"
            style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_cover"
            android:layout_marginBottom="@dimen/padding_xs"
            android:layout_marginLeft="@dimen/padding_xs"
            android:layout_marginTop="@dimen/padding_xs"
            android:layout_toRightOf="@+id/iv_cover"
            android:max="10"
            android:stepSize="0.5"
            tools:progress="8"/>

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rating_bar_rating"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/padding_s"
            android:textColor="@color/rating"
            android:textSize="@dimen/text_size_headline"
            android:textStyle="bold"
            tools:text="9.6"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>